<h2>Games</h2>

{{#each model as |game|}}
  <div>
    <h3>{{#link-to "game" game }} Game {{game.id}}{{/link-to}}</h3>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Player ID:</th>
          <th>Name:</th>
          <th>Nationality:</th>
        </tr>
      </thead>
      <tbody>
        {{#each game.profiles as |profile spot|}}
          <tr>
            {{player-row game=game
                           profile=profile
                           current=profile_id
                           leaveGame='leaveGame'}}
          </tr>
        {{/each}}
        {{#each (range game.profiles.length 5) as |index|}}
          <tr>
            {{player-row game=game joinGame='joinGame' leaveGame='leaveGame'}}
          </tr>
        {{/each}}
      </tbody>
    </table>
